<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="main" numcolumns="12">
            <column name="Marca" titleurl="\EditFabricante" order="110">
                <widget type="select" fieldname="codfabricante"/>
            </column>
            <column name="Modelo" titleurl="\EditMarcaModelo" order="120">
                <widget type="select" fieldname="codmodelo" parent="codfabricante">
                    <values source="tablamarcamodelo" fieldcode="id" fieldtitle="descripcion" fieldfilter="padre"/>
                </widget>
            </column>
            <column name="Familia" overwrite="true" titleurl="\EditFamilia" title="Familia" order="130">
                <widget type="select" fieldname="codfamilia"/>
            </column>
            <column name="Subfamilia" titleurl="\EditSubfamilia" order="140">
                <widget type="select" fieldname="codsubfamilia">
                      <values/>
                </widget>
            </column>
            <column name="tax" overwrite="true" titleurl="ListImpuesto" order="150">
                <widget type="select" fieldname="codimpuesto" onclick="EditImpuesto">
                    <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion"/>
                </widget>
            </column>
        </group>
    </columns>
</view>